{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "preserve",                                 
    "module": "commonjs",  
    "allowJs": true,
    "outDir": "./dist",                       
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                      
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types" , "./src/@types" ]                                
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "client"]
}
